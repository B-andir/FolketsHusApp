<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:FolketsHusApp.Models"
             x:Class="FolketsHusApp.Pages.FilmDetailPage"
             xmlns:viewmodel="clr-namespace:FolketsHusApp.ViewModel"
             x:DataType="viewmodel:FilmDetailViewModel"
             Title="{Binding OGFilmTitle}">
    <ScrollView Padding="10,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="240"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.ColumnSpan="2"
                Text="SAVE"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="200"
                BackgroundColor="LightSkyBlue"/>

            <Label 
                Grid.Row="1"
                Text="Film Title:"
                VerticalOptions="Center" 
                HorizontalOptions="Start"
                Margin="15,0"
                FontSize="17"/>

            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding FilmTitle}"
                VerticalOptions="Center"/>

            <Label
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HorizontalOptions="Start" 
                Margin="15,0"
                Text="Decription:"
                FontSize="17"/>

            <Editor
                Grid.Row="3"
                Grid.ColumnSpan="2"
                VerticalOptions="Start"
                Margin="15,0"
                Text="{Binding Description}"/>

            <Grid
                Grid.Row="4"
                Grid.ColumnSpan="2">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
                    Margin="5"
                    RowDefinitions="30,*">

                    <Label
                        Text="Poster:"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                    <Image
                        Grid.Row="1"
                        VerticalOptions="Start"
                        Margin="0, 5, 0, 0"
                        Source="{Binding PosterSource}"/>

                </Grid>

                <Grid
                    Grid.Column="1"
                    Margin="5"
                    RowDefinitions="30,*">

                    <Button
                        Text="Select New Image"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Padding="5"
                        BackgroundColor="DarkGrey"
                        Command="{Binding SelectImageCommand}"/>

                    <Image
                        Grid.Row="1"
                        VerticalOptions="Start"
                        Margin="0, 5, 0, 0"
                        Source="{Binding NewPosterSource}"/>

                </Grid>
            </Grid>

            <Label
                Grid.Row="5"
                Margin="15,0"
                Text="Trailer URL:"
                HorizontalOptions="Start" 
                VerticalOptions="Center"
                FontSize="16"/>

            <Entry
                Grid.Row="5"
                Grid.Column="1"
                Margin="15,0"
                Text="{Binding TrailerURL}"
                VerticalOptions="Center"/>

            <Label
                Grid.Row="6"
                Margin="15,0"
                Text="Run Time:"
                HorizontalOptions="Start" 
                VerticalOptions="Center"
                FontSize="16"/>

            <TimePicker
                Grid.Row="6"
                Grid.Column="1"
                Margin="15,0"
                VerticalOptions="Center"
                Time="{Binding RunTime}"
                Format="H:m"/>

            <Label
                Grid.Row="7"
                Margin="15,0"
                Text="Date:"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                FontSize="16"/>

            <DatePicker
                Grid.Row="7"
                Grid.Column="1"
                Margin="15,0"
                VerticalOptions="Center"
                Date="{Binding RunDate}"
                Format="dd/MM/yyyy"/>

            <Label
                Grid.Row="8"
                Margin="15,0"
                Text="Age Rating:"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                FontSize="16"/>

            <Picker
                Grid.Row="8"
                Grid.Column="1"
                VerticalOptions="Center"
                SelectedItem="{Binding AgeRating}"
                ItemsSource="{Binding AgeRatingItems}"
                ItemDisplayBinding="{Binding AgeRatingString}"/>

            <Label
                Grid.Row="9"
                Margin="15,0"
                Text="Ticket URL:"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                FontSize="16"/>

            <Entry
                Grid.Row="9"
                Grid.Column="1"
                Text="{Binding TicketURL}"
                VerticalOptions="Center"/>

            <Label
                Grid.Row="10"
                Margin="15,0"
                Text="Premiere:"
                HorizontalOptions="End"
                VerticalOptions="Center"
                FontSize="16"/>

            <CheckBox
                Grid.Row="10"
                Grid.Column="1"
                IsChecked="{Binding IsPremiere}"
                VerticalOptions="Center"
                HorizontalOptions="Start"/>


        </Grid>
    </ScrollView>
    
</ContentPage>